@{
  Layout = "_Layout";
}

@model Pierre.Models.Treat

<h4>Add a new Treat</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    <input type="submit" value="Add new Treat" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all Treats", "Index")</p>