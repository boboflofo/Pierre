@{
  Layout = "_Layout";
}

@using Pierre.Models;

<h1>Welcome to Pierre's Sweets</h1>

<hr />

<h4>Treats</h4>
@if (Model["treats"].Length == 0)
{
  <p>No treats have been added yet!</p>
} 
<ul>
  @foreach (Treat eng in Model["treats"])
  {
    <li>@Html.ActionLink(@eng.Name, "Details", "Treat", new { id = @eng.TreatId})</li>
  }
</ul>

<h4>Flavors</h4>
@if (Model["flavors"].Length == 0)
{
  <p>No flavors have been added yet!</p>
} 
<ul>
  @foreach (Flavor flavor in Model["flavors"])
  {
    <li>@Html.ActionLink(@flavor.Name, "Details", "Flavor", new { id = @flavor.FlavorId})</li>
  }
</ul>

<hr />

<p>@Html.ActionLink("Manage treats", "Index", "Treat")</p>
<p>@Html.ActionLink("Manage flavors", "Index", "Flavor")</p> 